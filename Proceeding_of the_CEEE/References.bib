@Article{6725661,
  author   = {H. Sira-Ramírez and J. Linares-Flores and C. García-Rodríguez and M. A. Contreras-Ordaz},
  title    = {On the Control of the Permanent Magnet Synchronous Motor: An Active Disturbance Rejection Control Approach},
  journal  = {IEEE Transactions on Control Systems Technology},
  year     = {2014},
  volume   = {22},
